server {
    server_name  www.blog.yaskovdev.com;
    rewrite ^(.*) http://blog.yaskovdev.com$1 permanent;
}

server {
    listen 80;
    listen [::]:80;

    root /var/www/blog;

    server_name blog.yaskovdev.com;

    rewrite ^(/.*)\.html(\?.*)?$ $1$2 permanent;
    rewrite ^/(.*)/$ /$1 permanent;

    index index.html;
    try_files $uri/index.html $uri.html $uri/ $uri /404.html =404;
}
